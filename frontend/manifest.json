{
  "manifest_version": 3,
  "name": "Snaption Web Clipper",
  "version": "1.0",
  "description": "Salve p√°ginas diretamente no Notion com um clique.",
  "permissions": ["storage", "tabs", "scripting", "contextMenus"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["auth_complete.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
